<p id="notice"><%= notice %></p>
<div class = "container">
<h1>Channels</h1>

<table>
  <thead>
    <tr>
      <th>Channel name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.channel_name %></td>
        <td><%= link_to 'Go to Channel', channel, class: "mybtn btntext" %></td>
        <td><%= link_to 'Edit Channel', edit_channel_path(channel), class: "mybtn btntext" %></td>
        <td><%= link_to 'Delete Channel', channel, method: :delete, data: { confirm: 'Are you sure?' }, class: "mybtn btntext" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Channel', new_channel_path, Class: "mybtn btntext" %>

</div>